<Window x:Class="WeatherDashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WeatherDashboard.ViewModels"
        xmlns:local="clr-namespace:WeatherDashboard.Helpers"
        xmlns:views="clr-namespace:WeatherDashboard.Views"
        Title="Weather Dashboard"
        Width="820"
        MinWidth="820"
        ResizeMode="CanResize"
        Height="600"
        Background="#F4F5F7"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/Icons/dashboard_icon.ico">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:WeatherCodeToIconAndLevelConverter x:Key="WeatherCodeToIconAndLevelConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH -->
        <Border Background="White"
                CornerRadius="16"
                Padding="12">
            <DockPanel LastChildFill="False">
                <TextBox Text="{Binding CityName, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0"
                         FontSize="14"
                         Width="220"
                         VerticalContentAlignment="Center"/>

                <Button Content="Search"
                        DockPanel.Dock="Right"
                        Width="110"
                        Margin="10,0,0,0"
                        Padding="14,6"
                        Command="{Binding SearchCommand}"/>

            </DockPanel>
        </Border>

        <!-- CONTENT GRID -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- WELCOME MESSAGE -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding CurrentWeather, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="Welcome to Weather Dashboard!"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Please enter a city name and click Search."
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- WEATHER CARD -->
            <Border Grid.Row="0"
                    Margin="0,24,0,0"
                    Background="White"
                    CornerRadius="20"
                    Padding="20"
                    Visibility="{Binding CurrentWeather, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter='Invert'}">
                <StackPanel>
                    <!-- HEADER ROW: ICON + CITY -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,12">

                        <Image Source="{Binding CurrentWeather.WeatherCode,
                                Converter={StaticResource WeatherCodeToIconAndLevelConverter}}"
                               Width="40"
                               Height="40"
                               Margin="0,0,10,0"/>

                        <TextBlock Text="{Binding CityDisplay}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Current Weather"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="{Binding CurrentWeather.WeatherCode, Converter={StaticResource WeatherCodeToIconAndLevelConverter}, ConverterParameter=Level}"
                               FontSize="14"
                               Foreground="DarkRed"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,8">
                        <Image Source="pack://application:,,,/Assets/Icons/tempreture_png.png"
                               Width="26"/>
                        <TextBlock Text="{Binding CurrentWeather.Temperature, StringFormat=' {0}°C'}"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,8">
                        <Image Source="pack://application:,,,/Assets/Icons/Humidity_png.png"
                               Width="24"/>
                        <TextBlock Text="{Binding CurrentWeather.Humidity, StringFormat=' Humidity: {0}%'}"
                                   FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,8">
                        <Image Source="pack://application:,,,/Assets/Icons/wind_night_weather_png.png"
                               Width="24"/>
                        <TextBlock Text="{Binding CurrentWeather.WindSpeed, StringFormat=' Wind: {0} km/h'}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding CurrentWeather.WindDirection, StringFormat=' ({0}°)'}"
                                   FontSize="14"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    <Button Content="Show Weekly Forecast"
                            Command="{Binding ToggleWeeklyForecastCommand}"
                            Margin="0,16,0,0"
                            Width="200"
                            HorizontalAlignment="Center"/>
                    <views:WeeklyForecastView
                        Visibility="{Binding IsWeeklyVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                    <TextBlock Text="Loading..."
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Foreground="Gray"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

